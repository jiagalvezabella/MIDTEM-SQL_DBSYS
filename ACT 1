PROBLEM 1

SELECT E.LASTNAME, E.FIRSTNAME, D.DEPTNAME
FROM EMPLOYEE E
JOIN DEPARTMENT D ON E.WORKDEPT = D.DEPTNO
ORDER BY E.LASTNAME, E.FIRSTNAME, D.DEPTNAME;

PROBLEM 2

SELECT E.LASTNAME, E.FIRSTNAME, E.JOB, D.DEPTNAME
FROM EMPLOYEE E
JOIN DEPARTMENT D ON E.WORKDEPT = D.DEPTNO
WHERE D.DEPTNO BETWEEN 'AD2' AND 'D22'
AND E.JOB NOT LIKE '%MANAGER%'
ORDER BY E.LASTNAME, E.FIRSTNAME, E.JOB, D.DEPTNAME;

PROBLEM 3

SELECT D.DEPTNAME, E.LASTNAME, E.FIRSTNAME
FROM DEPARTMENT D
JOIN EMPLOYEE E ON D.MGRNO = E.EMPNO
ORDER BY D.DEPTNAME;
